<section id="news" class="pt-5 pb-5" style="background: #1b1e21">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center align-items-center justify-content-center align-content-center">
                <header>
                    <h1>Derni√®res news</h1>
                </header>
            </div>
        </div>
        <div class="row">
                    {% for post in posts %}
                        <div class="col-lg-4 p-0">
                        <article>
                            <div class="card card-crew border-0">
                                <img class="card-img-top rounded-0" src="../img/article/{{ post.image }}" alt="Card image cap">
                                <div class="position-absolute card-crew-overlay">
                                    <div class="card-img-overlay d-flex flex-column justify-content-end">
                                        <h5 class="card-title">{{ post.title }}</h5>
                                        <p class="card-text">{{ post.body }}</p>
                                    </div>
                                </div>
                            </div>
                            {#
                            <header>
                                <span class="date">{{ post.createdAt|date('Y-m-d') }}</span>
                                <h1 class="news-title">{{ post.title }}</h1>
                            </header>
                            <p>
                                {{ post.body }}
                            </p>
                            <a class="btnNews" href="/post/{{ post.id }}" title="Voir plus">Voir plus</a>#}
                        </article>
                        </div>
                    {% endfor %}
                </div>
    </div>
</section>