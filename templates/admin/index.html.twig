{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-bordered">
                    <caption>Liste des articles</caption>
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">TITLE</th>
                        <th scope="col">DATE CREATION</th>
                        <th scope="col">ACTION</th>
                    </tr>
                    </thead>
                    {% for post in posts %}
                        <tr class="text-center">
                            <th>{{ post.id }}</th>
                            <td>{{ post.title }}</td>
                            <td>{{ post.createdAt | date('Y-m-d G:i') }}</td>
                            <td>
                                <a href="admin/delete/{{ post.id }}"><button class="btn btn-danger">SUPPRIMER</button></a>
                                <a href="admin/edit/{{ post.id }}"><button class="btn btn-info">MODIFIER</button></a>
                                <a href="post/{{ post.id }}"><button class="btn btn-info">VOIR</button></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                <a href="{{ path('new_post') }}"><button class="btn btn-info">CREER UN ARTICLE</button></a>
            </div>
        </div>
    </div>
{% endblock %}