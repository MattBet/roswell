<section id="section-newsletter" class="section">
    <div class="container">
        <div  class="row">
            <div class="col-lg-12 text-center">
                <h3 class="h3">join the newsletter and stay up to date</h3>
            </div>

            <div class="col-lg-12">
                {{ form_start(formNewsletter) }}
                <div class="row">
                    <div class="col-lg-6">
                {{ form_row(formNewsletter.first_name) }}
                    </div>
                    <div class="col-lg-6">
                {{ form_row(formNewsletter.email_address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                {{ form_row(formNewsletter.sign_up) }}
                    </div>
                </div>
                {{ form_end(formNewsletter) }}
            </div>
        </div>
    </div>
</section>