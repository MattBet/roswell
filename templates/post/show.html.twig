{% extends 'base.html.twig' %}

{% block body %}
    <header class="bg-image-full" style="background-image: url('../img/article/{{ post.image }}');">
        <div style="padding-top: 27%; padding-bottom: 2%; padding-left: 3%; padding-right: 50%;">
            <div class="row">
            <h6 style="font-size: 16px;     background-color: #1b1e21; color: white; text-transform: uppercase; font-family: 'BebasNeueBold', sans-serif;" class="pt-2 pb-2 pl-1 pr-1 d-inline">{{ post.createdAt|date('F jS Y') }}</h6>
            </div>
            <div class="row">
            <h1 style="background-color: #ffc107; text-transform: uppercase; font-family: 'BebasNeueBold', sans-serif;" class="pt-2 pb-2 pl-4 pr-4 d-inline text-dark">{{ post.title }}</h1>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-9 pt-5 pr-5">
                <div class="row">
                    <div class="col-lg-12">
                    <p class="border border-right-0 border-left-0 pt-3 pb-3">{{ post.body }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="float-left">

                                {% if prevPost %}
                                    <a href="/post/{{ prevPost.id }}">
                            <img src="../img/left-chevron.png" alt="">
                            <span>
                                {{ prevPost.title }}
                            </span>
                                    </a>
                                {% endif %}
                            </a>
                        </div>
                        <div class="float-right">

                                {% if nextPost %}
                            <a href="/post/{{ nextPost.id }}">
                                    <span>
                                {{ nextPost.title }}
                                </span>
                            <img src="../img/right-chevron.png" alt="">
                            </a>
                                {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 border-top-0 border-bottom-0 border-right-0 border">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>latest news</h1>
                    </div>
                </div>
                {% for post in posts %}
                    <div class="row pb-3">
                        <div class="col-lg-5">
                            <img class="img-fluid" src="../img/article/{{ post.image }}" alt="">
                        </div>
                        <div class="col-lg-7">
                            {{ post.title }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}